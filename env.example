# Unified POS & Loyalty App Environment Configuration

# Database Configuration (Shared)
DATABASE_URL=postgresql://username:password@localhost:5432/unified_pos_loyalty

# Authentication (Shared)
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# App Configuration
NODE_ENV=development
PORT=3000

# POS App Configuration
POS_APP_URL=http://localhost:3000/pos
POS_APP_NAME=POS System

# Loyalty App Configuration  
NEXT_PUBLIC_APP_URL=http://localhost:3000/loyalty
NEXT_PUBLIC_APP_NAME=Customer Loyalty App

# Social Login (Optional - for Loyalty App)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key

# Email Configuration (Optional - for Loyalty App)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com

# SMS Configuration (Optional - for Loyalty App)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# AI Chat Configuration (Optional - for Loyalty App)
OPENAI_API_KEY=your-openai-api-key
AI_CHAT_MODEL=gpt-3.5-turbo

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=your-ga-id
MIXPANEL_TOKEN=your-mixpanel-token

# Feature Flags (for Loyalty App)
ENABLE_SOCIAL_LOGIN=true
ENABLE_AI_CHAT=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_ANALYTICS=false

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# MuleSoft Integration (for POS App)
MULESOFT_BASE_URL=your-mulesoft-base-url
MULESOFT_CLIENT_ID=your-mulesoft-client-id
MULESOFT_CLIENT_SECRET=your-mulesoft-client-secret

# Internal Ports (for development)
LOYALTY_APP_PORT=3001


