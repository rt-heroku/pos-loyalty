{
  "name": "customer-loyalty-app",
  "version": "1.0.0",
  "description": "Customer-facing loyalty mobile/web application",
  "private": true,
  "scripts": {
    "dev": "next dev --port 3001",
    "build": "next build",
    "start": "next start --port 3001",
    "start:test": "next start --port 3001",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "syntax-check": "node check-syntax.js",
    "pre-commit": "npm run format && npm run syntax-check",
    "pre-push": "npm run pre-commit && npm run build",
    "update-cache": "node update-cache-version.js",
    "clear-cache": "npm run update-cache && echo 'Cache version updated! Please refresh your browser.'",
    "db:migrate": "psql $DATABASE_URL -f db/loyalty-database-changes.sql",
    "db:seed": "node scripts/seed-database.js",
    "heroku-postbuild": "npm run build && psql $DATABASE_URL -f db/loyalty-database-changes.sql",
    "env": "env"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.0.0",
    "critters": "^0.0.23",
    "dotenv": "^17.2.1",
    "framer-motion": "^10.16.16",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.294.0",
    "next": "^14.2.32",
    "next-pwa": "^5.6.0",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "tailwind-merge": "^2.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.4",
    "@types/pg": "^8.10.9",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.55.0",
    "eslint-config-next": "14.0.4",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "loyalty",
    "customer",
    "pwa",
    "nextjs",
    "typescript",
    "tailwindcss"
  ],
  "author": "Customer Loyalty Team",
  "license": "MIT"
}
